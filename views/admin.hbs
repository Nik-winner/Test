<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="CSS/admin.css">
    <title>admin</title>
</head>
<body>
    {{> menuAdmin}}
    <main class="main">
        <div class="table">
            <div class="table_el">
                {{#each users}}
                    <div class="grid_el">{{this.name}}</div>
                    <div class="grid_el">{{this.surname}}</div>
                    <div class="grid_el">{{this.role}}</div>
                    <div class="grid_el">
                        <a href="/edit.hbs" class="edit">изменить</a>
                    </div>
                    <div class="grid_el">
                        <form>
                            <input type="submit" class="submit" value="удалить">
                        </form>
                    </div>
                {{/each}}
            </div>
        </div>
    </main>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/attendance.css">
    <title>посещаемость</title>
</head>
<body>
    {{> branchMenu}}
    <main class="main">
        <div class="attendance_table">
            <div class="dates">
                <div class="dates_item">
                    <div>Ученики</div>
                </div>
                <div class="week">
                    {{#each dates}}
                        <div class="dates_item">
                            <div>{{this.weekDay}}</div>
                            <div>{{this.shortDate}}</div>
                        </div>
                        
                    {{/each}}
                </div>
            </div>
            <div class="users_attendance">
                <div class="students">
                    {{#each students}}
                        <div class="cell_students">
                            <div class="cont_stud">{{this.login}}</div>
                            <div class="cont_stud">{{this.surname}}</div>
                            <div class="cont_stud">({{this.password}})</div>
                        </div>
                    {{/each}}
                </div>
                <div class="attendance">
                    {{#each attendances}}
                        <div class="cell_attendance">
                            <div class="attend" ><span class="check" hidden>{{check}}</span></div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </main>
    <script src="/JS/attendance.js"></script>
</body>
</html>